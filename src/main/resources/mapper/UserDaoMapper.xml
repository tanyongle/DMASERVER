    <select id="getUser" resultType="hashmap">
        select t1.id,t1.username,t1.`status`,t2.name,t2.address
        from tbl_user t1 left join tbl_check_point t2 on t1.cpid = t2.id
        where t1.id = 1;
    </select>
</mapper>